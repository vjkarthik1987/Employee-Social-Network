

<style>

.flash {
  position: relative;
  padding: 10px 40px 10px 12px;
  border-radius: 6px;
  margin-bottom: 10px;
  font-weight: 500;
}

.flash-success {
  background: #e7f9ed;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.flash-error {
  background: #fdecea;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

.flash-close {
  position: absolute;
  top: 8px;
  right: 10px;
  border: none;
  background: transparent;
  font-size: 20px;
  line-height: 1;
  color: inherit;
  cursor: pointer;
  opacity: 0.7;
  transition: opacity 0.2s;
}

.flash-close:hover {
  opacity: 1;
}

</style>


<% if (success && success.length) { %>
  <div class="flash flash-success">
    <span><%= success[0] %></span>
    <button class="flash-close" onclick="this.parentElement.remove()">×</button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="flash flash-error">
    <span><%= error[0] %></span>
    <button class="flash-close" onclick="this.parentElement.remove()">×</button>
  </div>
<% } %>

