<nav style="display:flex;gap:12px;align-items:center;padding:10px 16px;border-bottom:1px solid #eee;">
    <!-- Left: org-aware links when org exists -->
    <% if (org) { %>
      <a href="/<%= org.slug %>/feed">Feed</a>
      <a href="/<%= org.slug %>/groups">Groups</a>
  
      <% if (currentUser && ['MODERATOR','ORG_ADMIN'].includes(currentUser.role)) { %>
        <a href="/<%= org.slug %>/mod/queue">Moderation</a>
      <% } %>
  
      <% if (currentUser && currentUser.role === 'ORG_ADMIN') { %>
        <a href="/<%= org.slug %>/admin/settings">Admin</a>
        <a href="/<%= org.slug %>/admin/users">Users</a>
      <% } %>
  
      <!-- Right: auth -->
      <div style="margin-left:auto;display:flex;gap:8px;align-items:center;">
        <% if (currentUser) { %>
          <form method="POST" action="/<%= org.slug %>/auth/logout" style="display:inline;">
            <button type="submit">Logout</button>
          </form>
        <% } else { %>
          <a href="/<%= org.slug %>/auth/login">Login</a>
        <% } %>
      </div>
  
    <% } else { %>
      <!-- No org (public pages) -->
      <a href="/">Home</a>
      <div style="margin-left:auto;">
        <a href="/auth/register-org">Register Org</a>
        <a href="/auth/login" style="margin-left:10px;">Login</a>
      </div>
    <% } %>
  </nav>
  