<% layout('layouts/_layout') %>

<section class="admin-users-page">
  <header class="admin-page-head">
    <h2 class="h2">Users — <%= company.name %></h2>
    <p class="sub">
      Manage your organisation’s members, roles and status.
    </p>
  </header>

  <!-- CSV import -->
  <form
    action="/<%= company.slug %>/admin/users/import"
    method="POST"
    enctype="multipart/form-data"
    class="admin-import-form"
  >
    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
    <label class="admin-import-label">
      <span class="admin-import-title">Bulk add via CSV</span>
      <input type="file" name="csv" accept=".csv" required />
    </label>
    <button type="submit" class="btn btn-ghost">Import</button>
    <p class="admin-import-hint">
      CSV headers: <code>fullName,email,role,dateOfBirth,anniversaryDate,dateOfJoining</code><br/>
      Date fields are optional, format: <code>YYYY-MM-DD</code>.
    </p>    
  </form>

  <!-- Add single user -->
  <form
      action="/<%= company.slug %>/admin/users/create"
      method="POST"
      class="admin-import-form"
      style="margin-top:12px;"
      >
      <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

      <div class="admin-import-label" style="align-items:flex-start;">
        <span class="admin-import-title">Add one user</span>

        <div style="display:grid; gap:10px; width:100%; max-width:520px;">
          <input class="input" type="text" name="fullName" placeholder="Full name" required maxlength="120">
          <input class="input" type="email" name="email" placeholder="Email" required maxlength="200">

          <div style="display:flex; gap:10px; flex-wrap:wrap;">
            <select class="input" name="role">
              <option value="MEMBER">Member</option>
              <option value="MODERATOR">Moderator</option>
              <option value="ORG_ADMIN">Org Admin</option>
            </select>

            <select class="input" name="status">
              <option value="active">Active</option>
              <option value="invited">Invited</option>
              <option value="suspended">Suspended</option>
            </select>
          </div>

          <div class="fineprint" style="opacity:.8;">
            Default password will be set (same as your CSV import). You can improve this later with invite links.
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-ghost">Add user</button>
    </form>


  <!-- Users table -->
  <div class="admin-table-shell">
    <table class="admin-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th style="text-align:right;">Actions</th>
        </tr>
      </thead>
      <tbody>
      <% if (users && users.length) { %>
        <% users.forEach(u => { %>
          <tr>
            <td>
              <a
                href="/<%= company.slug %>/profile/<%= u._id %>"
                class="admin-user-link"
              >
                <div class="admin-user-main">
                  <div class="admin-user-avatar">
                    <span><%= (u.fullName || '?').charAt(0).toUpperCase() %></span>
                  </div>
                  <div>
                    <div class="admin-user-name"><%= u.fullName %></div>
                    <% if (u.title || u.department) { %>
                      <div class="admin-user-meta">
                        <%= [u.title, u.department].filter(Boolean).join(' · ') %>
                      </div>
                    <% } %>
                  </div>
                </div>
              </a>
            </td>
            
            <td class="admin-user-email">
              <%= u.email %>
            </td>
            <td>
              <span class="tag tag-role tag-role-<%= u.role.toLowerCase() %>">
                <%= u.role %>
              </span>
            </td>
            <td>
              <span class="tag tag-status tag-status-<%= u.status %>">
                <%= u.status %>
              </span>
            </td>
            <td class="admin-users-actions">
              <a
                href="/<%= company.slug %>/admin/users/<%= u._id %>/edit"
                class="btn-ghost btn-sm"
              >
                Edit
              </a>

              <form
                action="/<%= company.slug %>/admin/users/<%= u._id %>/delete"
                method="POST"
                onsubmit="return confirm('Delete this user?');"
                style="display:inline;"
              >
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                <button type="submit" class="btn-ghost btn-sm btn-danger-soft">
                  Delete
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5" class="admin-table-empty">
            No users yet. Import via CSV or add users from the profile/admin flows.
          </td>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</section>
