  <style>
    :root{
    --jaango-yellow:#FFC33A;
    --jaango-yellow-ink:#E59A00;
    --jaango-green:#3CA46B;
    --ink-900:#0E1116;
    --ink-700:#1F232B;
    --ink-500:#525866;
    --ink-300:#8E95A3;
    --paper:#ffffff;
    --paper-2:#FAFBFC;
    --ring: rgba(60,164,107,.35);
    --radius: 16px;
    --gap: clamp(16px, 3vw, 28px);
    --maxw: 1120px;
    }
    @media (prefers-color-scheme: dark){
    :root{
        --paper:#0B0E14;
        --paper-2:#0F131A;
        --ink-900:#F7F8FA;
        --ink-700:#E9EBEF;
        --ink-500:#B8BFCC;
        --ink-300:#99A1B1;
        --ring: rgba(255,195,58,.28);
    }
    }
    .wrap{max-width:var(--maxw);margin:0 auto;padding:24px;}
    .hero-center{text-align:center;padding:clamp(18px,5vw,40px) 0 10px;}
    .plans{display:grid;gap:var(--gap);grid-template-columns:repeat(3,minmax(0,1fr));}
    @media (max-width: 980px){ .plans{grid-template-columns:1fr} }

    .plan{background:var(--paper-2);border:1px solid rgba(0,0,0,.06);border-radius:var(--radius);padding:18px;display:flex;flex-direction:column;gap:10px}
    .plan h3{margin:0;color:var(--ink-900);font-size:20px}
    .price{font-weight:800;font-size:28px;letter-spacing:-.3px;color:var(--ink-900)}
    .meta{color:var(--ink-500);font-size:14px}
    .list{margin:8px 0 0;padding-left:18px;color:var(--ink-700);line-height:1.7}
    .badge{display:inline-flex;align-items:center;gap:8px;border:1px solid rgba(0,0,0,.06);padding:6px 10px;border-radius:999px;background:var(--paper)}
    .accent-cloud{background:color-mix(in oklab,var(--jaango-yellow) 16%, transparent)}
    .accent-forever{background:color-mix(in oklab,var(--jaango-green) 14%, transparent)}
    .accent-community{background:color-mix(in oklab,var(--ink-300) 14%, transparent)}

    .calc{background:var(--paper-2);border:1px solid rgba(0,0,0,.06);border-radius:var(--radius);padding:18px;margin-top:12px}
    .calc-row{display:grid;gap:12px;grid-template-columns:1fr 1fr 1fr}
    @media (max-width: 900px){ .calc-row{grid-template-columns:1fr} }
    .calc label{display:block;font-weight:600;margin-bottom:6px;color:var(--ink-700)}
    .calc input[type="number"]{width:100%;padding:10px;border-radius:12px;border:1px solid rgba(0,0,0,.12);background:var(--paper);color:var(--ink-900)}
    .calc .out{background:var(--paper);border:1px dashed rgba(0,0,0,.12);padding:10px;border-radius:12px;min-height:44px;display:flex;align-items:center}

    .manifesto{background:var(--paper-2);border:1px solid rgba(0,0,0,.06);border-radius:var(--radius);padding:18px}
    .faq{display:grid;gap:var(--gap);grid-template-columns:repeat(2,minmax(0,1fr))}
    @media (max-width: 980px){ .faq{grid-template-columns:1fr} }
    .qa{background:var(--paper-2);border:1px solid rgba(0,0,0,.06);border-radius:var(--radius);padding:16px}
    .qa h4{margin:0 0 6px}

    .table{width:100%;border-collapse:separate;border-spacing:0;border:1px solid rgba(0,0,0,.06);border-radius:12px;overflow:hidden}
    .table th,.table td{padding:12px 14px;text-align:left}
    .table thead{background:var(--paper-2)}
    .table tbody tr:not(:last-child) td{border-bottom:1px solid rgba(0,0,0,.06)}
  </style>
</head>
<body>

